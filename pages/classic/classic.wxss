/* pages/classic/classic.wxss */
.chunk {
    width: 150px;
    height: 100px;
}
.container{
    height: 500px;
    background-color: cadetblue;
    /* flex 弹性盒子 */
    display: flex;
    flex-direction: row;/* 主轴*/
    justify-content: center; /* 主轴居中*/
    /* justify-content: space-around; */
    /* justify-content: space-between; */
    /* justify-content: space-evenly; */
    align-items: center;/*交叉轴居中*/
    /* align-items: flex-start;交叉轴从上开始 */
    /* align-items: baseline;各个模块的内容底部对其 */
    /* align-items: stretch;不设置高度,各个模块拉伸充满整个容器 */
    flex-wrap: nowrap;/*换行和不换行*/
    flex-wrap: wrap-reverse;/*逆向换行*/
}
.color1 {
    background-color: red;
    font-size: 20px;
}
.color2 {
    background-color: rgb(15, 0, 100);
    font-size: 16px;
}
.color3 {
    background-color: orange;
    font-size: 10px;
}
.color4 {
    color: orange;
}